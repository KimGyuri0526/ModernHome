<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.modernhome.mapper.LineMapper">
	
	<!-- 라인 목록 조회 -->
	<select id="lineList" resultType="com.modernhome.domain.LineVO">
		select * from line
	</select>
	<!-- 라인 목록 조회 -->
	
	<!-- 라인 목록 검색 -->
	<select id="lineListSearch" resultType="com.modernhome.domain.LineVO">
		select * from line
		<where>
			<if test="line_num != ''">
				line_num = #{line_num}
			</if>
			<if test="line_name != ''">
				AND line_name = #{line_name}
			</if>
			<if test="use_yn != '전체'">
				AND use_yn = #{use_yn}
			</if>
		</where>
	</select>
	<!-- 라인 목록 검색 -->
	
	<!-- 라인 등록 -->
	<insert id="regLine">	
		insert into line(line_num, line_name, use_yn, reg_date, emp_id)
		values (#{line_num}, #{line_name}, #{use_yn}, #{reg_date}, #{emp_id})
	</insert>
	<!-- 라인 등록 -->
	
	<!-- 라인 삭제 -->
	<delete id="deleteLine">
		delete from line where emp_id = #{emp_id}
	</delete>
	<!-- 라인 삭제 -->

</mapper>