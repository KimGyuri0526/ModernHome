<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.modernhome.mapper.MaterialMapper">
	
	<!-- 자재 목록 조회 -->
	<select id="materialList" resultType="com.modernhome.domain.MaterialVO">
		select ma_num, ma_name, ma_unit, ma_price 
		from material
	</select>
	<!-- 자재 목록 조회 -->
	
	<!-- 자재 검색 결과 조회 -->
	<select id="maSearchList" resultType="com.modernhome.domain.MaterialVO" 
		parameterType="java.util.Map">
		select * from material
		where
		<choose>
			<when test="itemOption == 'name'">
				ma_name like CONCAT('%', #{search}, '%')
			</when>
			
			<otherwise>
				ma_num like CONCAT('%', #{search}, '%')
			</otherwise>
		</choose>
	</select>
	<!-- 자재 검색 결과 조회 -->
	
</mapper>