<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.modernhome.mapper.ProductMapper">
	
	<!-- 완제품 목록 조회 -->
	<select id="productList" resultType="com.modernhome.domain.ProductVO">
		select pro_num, pro_name, pro_unit, pro_price 
		from product
	</select>
	<!-- 완제품 목록 조회 -->
	
	<!-- 완제품 검색 결과 조회 -->
	<select id="proSearchList" resultType="com.modernhome.domain.ProductVO"
		parameterType="java.util.Map">
		select * from product
		where
		<choose>
			<when test="itemOption == 'name'">
				pro_name like CONCAT('%', #{search}, '%')
			</when>
			
			<otherwise>
				pro_num like CONCAT('%', #{search}, '%')
			</otherwise>
		</choose>
	</select>	
	<!-- 완제품 검색 결과 조회 -->
	
</mapper>